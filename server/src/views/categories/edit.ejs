<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form method="POST" action='/category/update/<%-formData._id %>'>
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="card">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label>Category Name</label>
                                        <input type="text"
                                            class="form-control <%= formErrors.name ? 'is-invalid' :'' %>" name="name"
                                            value="<%= formData.name %>" placeholder="Enter Category Name">
                                        <% if(formErrors.name){ %>
                                        <div class="invalid-feedback">
                                            <%- formErrors.name %>
                                        </div>
                                        <% } %>
                                    </div>
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea name="description" class="form-control"
                                            rows="4"><%= formData.description %></textarea>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-5">
                                            <div class="form-group">
                                                <label>Select</label><br />
                                                <select class="form-control" name="status">
                                                    <option value="1" <%= +formData.status == 1? ' selected':''  %>>
                                                        Active
                                                    </option>
                                                    <option value="0" <%= +formData.status == 0? ' selected':''  %>>
                                                        InActive
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <div class="card">
                                <div class="card-body" id="apndSubCat">
                                    <% if(typeof formData.subcategories !== 'undefined' && formData.subcategories.length > 0){ %>
                                    <%
                                    const lt = formData.subcategories.length;
                                    let i =1;
                                         formData.subcategories.forEach(model => { %>
                                    <div class="row" id="subcat-<%- i  %>">
                                        <div class="col-lg-10">
                                            <div class="form-group">
                                                <label>Sub Category Name</label>
                                                <input type="text"
                                                    class="form-control <%= formErrors.subcategory ? 'is-invalid' :'' %>"
                                                    name="subcategory[<%- i %>][subCatname]"
                                                    value="<%= model.subCatname %>" placeholder="Enter Category Name">
                                                <% if(formErrors.subcategory){ %>
                                                <div class="invalid-feedback">
                                                    <%- formErrors.subcategory %>
                                                </div>
                                                <% } %>
                                            </div>
                                            <div class="form-group">
                                                <label>Description</label>
                                                <textarea name="subcategory[<%- i %>][subCatdescription]"
                                                    class="form-control"
                                                    rows="2"><%= model.subCatdescription %></textarea>
                                            </div>
                                        </div>
                                        <div class="col-lg-2">
                                            <br />
                                            <% if(i == 1){%>
                                            <button id="addsubcat" data-id="<%- lt %>" class="btn btn-xs btn-primary">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                            <% }else{ %>
                                            <button href="#" data-id="<%- i %>"
                                                class="btn btn-xs btn-danger remove-sub">
                                                <i class="fa fa-minus"></i>
                                            </button>
                                            <% } %>
                                        </div>
                                    </div>
                                    <% i++ }) %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>